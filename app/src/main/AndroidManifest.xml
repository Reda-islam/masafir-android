<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.masafir.app"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- الإنترنت للموقع داخل WebView -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- إذا استعملت ACTION_CALL عوّض ACTION_DIAL:
    <uses-permission android:name="android.permission.CALL_PHONE" />
    -->

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:usesCleartextTraffic="true"  <!-- فعّلها فقط إذا عندك HTTP صافي -->
        android:supportsRtl="true">

        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- (اختياري) إظهار متجر Play إذا ما كانش التطبيق اللي كيقبل intent:// -->
    </application>
</manifest>
